{
  "manifest_version": 2,

  "name": "TotalSearch",
  "description": "Search Wikipedia and Google Images with just a click.",
  "version": "1.0",
  "background": {
	"scripts": ["backgroundPage.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "find16.png",
    "default_popup": "f.html"
  },
  "icons": { "16": "find16.png",
	  		"19": "find19.png",
	  		"38": "find38.png",
           "48": "find48.png",
          "128": "find128.png" 
  }
}